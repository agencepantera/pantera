---
interface Props {
  items: {
    id: string;
    title: string;
  }[];
}

const { items } = Astro.props;
---

<div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg mb-8">
  <h2 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Table des mati√®res</h2>
  <nav>
    <ul class="space-y-2">
      {items.map((item) => (
        <li>
          <a
            href={`#${item.id}`}
            class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 transition-colors duration-200"
          >
            {item.title}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</div>