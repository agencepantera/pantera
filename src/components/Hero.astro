---
import { Image } from 'astro:assets';
---

<section class="relative h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    <Image
      src="/images/fond-agence-pantera.webp"
      alt="Pantera Agency - Agence Web Lille"
      width={1920}
      height={1080}
      class="object-cover w-full h-full"
    />
    <div class="absolute inset-0 bg-black/85"></div> <!-- Augmentation de l'opacité -->
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl sm:text-6xl lg:text-7xl font-bold text-white mb-6">
      <span class="block">Votre Agence Web</span>
      <span class="block text-primary-400">sur la Métropole Lilloise</span> <!-- Ajustement des couleurs -->
    </h1>
    <p class="text-xl text-gray-100 mb-8 max-w-xl">
      Experts en création de sites web, référencement et stratégie digitale à Wattrelos
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="#contact"
        class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-800 hover:bg-primary-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-700 transition-colors duration-300"
        style="background-color: #1a202c;"
        aria-label="Démarrer votre projet - Contact"
      >
        Démarrer votre projet
      </a>
      <a
        href="#services"
        class="inline-flex items-center px-8 py-3 border-2 border-white text-base font-medium rounded-md text-white hover:bg-gray-100 hover:text-gray-900 transition-colors duration-300"
        style="background-color: #f8f8f8; color: #111111;"
        aria-label="Découvrir nos services"
      >
        Découvrir nos services
      </a>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
    <a
      href="#services"
      class="text-white hover:text-primary-300 transition-colors duration-300"
      aria-label="Découvrir nos services"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        />
      </svg>
    </a>
  </div>
</section>