---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

const title = "Nos Expertises | Pantera Agency";
const description = "Découvrez nos expertises en création de sites web, e-commerce, référencement et stratégie digitale. Solutions sur-mesure pour votre succès digital.";

const expertises = [
  {
    title: "Site Vitrine",
    description: "Création de sites vitrines professionnels et performants",
    href: "/expertises/site-vitrine",
    image: "/images/expertise/site-vitrine.webp"
  },
  {
    title: "Site E-commerce",
    description: "Solutions e-commerce sur-mesure et optimisées pour la conversion",
    href: "/expertises/site-ecommerce",
    image: "/images/expertise/ecommerce.webp"
  },
  {
    title: "Audit SEO",
    description: "Analyse approfondie de votre référencement naturel",
    href: "/expertises/audit-seo",
    image: "/images/expertise/audit-seo.webp"
  },
  {
    title: "Référencement Naturel",
    description: "Optimisation SEO pour une meilleure visibilité",
    href: "/expertises/referencement-naturel",
    image: "/images/expertise/seo.webp"
  },
  {
    title: "Référencement Payant",
    description: "Campagnes Google Ads optimisées pour vos objectifs",
    href: "/expertises/referencement-payant",
    image: "/images/expertise/sea.webp"
  },
  {
    title: "Social ADS",
    description: "Publicités ciblées sur les réseaux sociaux",
    href: "/expertises/social-ads",
    image: "/images/expertise/social-ads.webp"
  },
  {
    title: "Audit de Site",
    description: "Analyse technique et fonctionnelle de votre site",
    href: "/expertises/audit-site",
    image: "/images/expertise/audit.webp"
  },
  {
    title: "Création / Refonte de Site",
    description: "Création ou refonte complète de votre présence web",
    href: "/expertises/creation-refonte-site",
    image: "/images/expertise/creation.webp"
  }
];
---

<Layout title={title} description={description}>
  <div class="pt-20">
    <section class="relative h-[400px] flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <Image
          src="/images/expertise/hero.webp"
          alt="Nos expertises digitales"
          width={1920}
          height={400}
          class="object-cover w-full h-full"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-extrabold text-white sm:text-5xl">
          Nos Expertises
        </h1>
        <p class="mt-4 text-xl text-gray-200 max-w-3xl mx-auto">
          Des solutions digitales complètes pour votre succès en ligne
        </p>
      </div>
    </section>

    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {expertises.map((expertise) => (
            <a 
              href={expertise.href}
              class="group relative overflow-hidden rounded-lg shadow-lg bg-white dark:bg-gray-900 hover:transform hover:-translate-y-1 transition-all duration-300"
            >
              <div class="relative h-48">
                <Image
                  src={expertise.image}
                  alt={expertise.title}
                  width={400}
                  height={200}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              </div>
              <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">
                  {expertise.title}
                </h2>
                <p class="mt-2 text-gray-600 dark:text-gray-400">
                  {expertise.description}
                </p>
                <div class="mt-4 flex items-center text-primary-600 dark:text-primary-400">
                  <span class="text-sm font-medium">En savoir plus</span>
                  <svg class="ml-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>